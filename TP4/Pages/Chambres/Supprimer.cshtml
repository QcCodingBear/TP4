@page
@model TP4.Pages.Chambres.SupprimerModel
@{
    ViewData["Titre"] = "Gestion des Chambres - Supprimer";
}

<div class="container mt-5">
    <h1 class="mb-4">@ViewData["Titre"]</h1>

    <div class="card">
        <div class="card-body">
            <dl class="row mb-3">
                <dt class="col-sm-2">Identifiant</dt>
                <dd class="col-sm-10">@Model.Chambre.Id</dd>

                <dt class="col-sm-2">Description</dt>
                <dd class="col-sm-10">@Model.Chambre.Description</dd>

                <dt class="col-sm-2">Prix Journalier</dt>
                <dd class="col-sm-10">$@Model.Chambre.PrixJournalier</dd>
            </dl>
        </div>
    </div>

    <form method="post" class="mt-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-check mb-3">
            <input asp-for="Chambre.Id" value="@Model.Chambre.Id" type="hidden" />
        </div>
        <button type="submit" class="btn btn-danger mt-2">Supprimer</button>
        <a asp-page="Index" class="btn btn-secondary mt-2">Retourner à la liste</a>
    </form>
</div>